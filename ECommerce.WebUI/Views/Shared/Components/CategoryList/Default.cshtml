@model CategoryListViewModel
@{
    var styleAllCategories = "list-group-item";
}
<section class="list-group">
    @if (Model.CurrentCategory == 0)
    {
        styleAllCategories += " active";
    }
    @* <a href="/product/index?category=0" class="@styleAllCategories">@Model.AllCategories</a> *@
    <a href="/@Model.ControllerName/index?category=0" class="@styleAllCategories">@Model.AllCategories</a>
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
 @*        <a href="/product/index?category=@item.CategoryId" style="cursor:pointer" class="@css">
            @item.CategoryName
        </a> *@
        <a href="/@Model.ControllerName/index?category=@item.CategoryId" style="cursor:pointer" class="@css">
            @item.CategoryName
        </a>
    }
</section>